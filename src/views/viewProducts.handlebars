<div class="infoProd" >
    <h1>Listado de Productos con handlebars </h1>
    <div class="detalleProd">
        <div class="product-container">
            {{#each products}}
            <div class="product">
                <h2>Descripcion {{this.description}} </h2>
                <p>Precio ${{this.price}} </p>
                <button>Agregar al carrito</button>
                <a href="/api/product/{{this._id}} ">Ver Detalle </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>